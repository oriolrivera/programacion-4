unit Unit1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Data.DB, Data.Win.ADODB;

type
  TFormLogin = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Button1: TButton;
    Edit1: TEdit;
    Edit2: TEdit;
    Button2: TButton;
    ADOConnectionLogin: TADOConnection;
    DataSourceLogin: TDataSource;
    ADOQueryLogin: TADOQuery;
    procedure Button2Click(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FormLogin: TFormLogin;

implementation

{$R *.dfm}

uses Unit2;

procedure TFormLogin.Button1Click(Sender: TObject);
begin
ADOQueryLogin.First;
   with ADOQueryLogin do
  begin
  Close;
    SQL.text:= 'Select login, password from usuarios Where login='+Quotedstr(Edit1.text)+' And password='+Quotedstr(Edit2.text);
  Open;
  end;

    begin

      if ADOQueryLogin.RecordCount<>0 then
        begin
            //ShowMessage('Bienvenido El susuario y contraseña son correctos');
             /
                FormLogin.hide;
                FormProduct.showmodal;
                FormLogin.show;
                Edit1.Text:='';
                Edit2.Text:='';
        end
      else
        begin
          ShowMessage('El usuario o contraseña no son correctos. Intente de nuevo');
        end;
    end;

end;

procedure TFormLogin.Button2Click(Sender: TObject);
begin
FormLogin.Close;
end;

end.
