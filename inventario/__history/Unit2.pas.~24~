procedure TFormProduct.ComboBox1Change(Sender: TObject);
var i:integer;
begin

 ADOQuery1.First;
 with AdoQuery1 do
begin
Close;
SQL.text:= 'select * from tipo_de_inventario';
Open;
end;

 for i:=0 to ADOQuery1.RecordCount-1 do
  begin
    ComboBox1.Items.Add(ADOQuery1.Fields[1].AsString);

    ADOQuery1.Next;
  end;
 //ComboBox1.Clear;

end;

